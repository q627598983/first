import java.util.Scanner;
class getName{
  public static void main(){
    Scanner sc = new Scanner(System.in);
    System.out.println("请输入:");
    String s = sc.nextLine();//ajnbakfnbakjnbabdsfnbablfa
    int a = s.length();//得到原字符串的长度
    s = s.replace("nba","");用空格替换掉NBA
    int b = s.length();//得到替换后字符串的长度
    int c = (a-b)/3;
    System.out.println(c);//输出一共有几个NBA
  }
}
